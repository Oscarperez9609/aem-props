<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Create Banner"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured"
             sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs"
                  maximized="true">
                <items jcr:primaryType="nt:unstructured">
                    <general
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Content"
                            sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <slides
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            composite="{Boolean}true"
                                            fieldLabel="Slides">
                                        <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                name="./slides">
                                            <items jcr:primaryType="nt:unstructured">

                                                <mainText
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        name="./mainText"
                                                        useFixedInlineToolbar="{Boolean}true"
                                                        fieldLabel="Banner Title">
                                                </mainText>
                                                <secondaryText
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        name="./secondaryText"
                                                        useFixedInlineToolbar="{Boolean}true"
                                                        fieldLabel="Description">
                                                </secondaryText>
                                                <backgroundDesktop
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Background"
                                                        name="./backgroundDesktop"
                                                        rootPath="/content/dam"/>
                                                <backgroundAlt
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        name="./backgroundAlt"
                                                        fieldLabel="Alt Background Resource"
                                                        xtype="text"/>
                                                <resourcePath
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldLabel="Lateral resource"
                                                        name="./resourcePath"
                                                        rootPath="/content/dam"/>
                                                <isVideo
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                        text="Â¿Is it a video?"
                                                        name="./isVideo"
                                                        uncheckedValue="false"
                                                        value="true"
                                                />
                                                <isVideoType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                        name="./isVideo@TypeHint"
                                                        value="Boolean"/>
                                                <buttons
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Botones">
                                                    <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./buttons">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldLabel="Texto"
                                                                    name="text"/>
                                                            <link
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldLabel="Enlace"
                                                                    name="./link"
                                                                    rootPath="/content/mercadolivre"/>
                                                            <color
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Color Fuente"
                                                                    name="./color"/>
                                                            <background
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Background color"
                                                                    name="./background"/>
                                                            <border
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Border color"
                                                                    name="./border"/>
                                                            <hoverColor
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Font color - hover"
                                                                    name="./hoverColor"/>
                                                            <hoverBackground
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Background color - Hover"
                                                                    name="./hoverBackground"/>
                                                            <hoverBorder
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                                    fieldLabel="Border color - Hover"
                                                                    name="./hoverBorder"/>
                                                        </items>
                                                    </field>
                                                </buttons>
                                            </items>
                                        </field>
                                    </slides>
                                </items>
                            </column>
                        </items>
                    </general>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>